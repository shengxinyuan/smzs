.box-one,
.box-two,
.box-there {
  background-color: #FFFFFF;
  border-top: solid 20rpx #F8F8F8;
}
.zl-head {
  padding: 20rpx 30rpx;
  border-bottom: solid 2rpx #F8F8F8;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.zl-heads {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: solid 2rpx #F8F8F8;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.heads {
  font-size: 28rpx;
}
.images {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.images image {
  width: 80rpx;
  height: 86rpx;
}
.images .shop-photo {
  width: 25%;
  border-radius: 100%;
  background-color: #F6F6F6;
}
.images .shop-code {
  width: 80rpx;
  height: 80rpx;
}
.nick-name {
  width: 70%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 26rpx;
  color: #999999;
}
.icon {
  font-size: 32rpx;
  color: #CCCCCC;
  margin-left: 10rpx;
}
.shop-logo-popup {
  width: 100%;
  font-size: 32rpx;
  padding: 0 30rpx;
}
.shop-logo-popup .take-picture,
.shop-logo-popup .album {
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-bottom: solid 2rpx #F8F8F8;
}
.shop-logo-popup .cancel {
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  border-bottom: solid 2rpx #F8F8F8;
  color: #ff3b3b;
}

