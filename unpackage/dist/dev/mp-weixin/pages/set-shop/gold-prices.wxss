.head {
  width: 100%;
  display: flex;
  font-size: 32rpx;
  margin-top: 60rpx;
  padding-bottom: 30rpx;
}
.head .head_left {
  width: 14%;
  padding-left: 1%;
}
.head .head_cont {
  margin-left: 24%;
}
.zl-box {
  padding: 20rpx 30rpx;
}
.gold-prices-box {
  margin-bottom: 30rpx;
}
.gold-prices-box .gold-prices-box-up {
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
  background-image: linear-gradient(180deg, #f3e9df 0%, #f6efe9 100%);
  border-radius: 10rpx 10rpx 0 0;
  border-bottom: dashed 2rpx #cccccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.gold-prices-box .gold-prices-box-up .up-title {
  font-size: 26rpx;
}
.gold-prices-box .gold-prices-box-up .up-prices {
  color: #ef2d2d;
}
.gold-prices-box .gold-prices-box-up .up-prices .rmb {
  font-size: 20rpx;
}
.gold-prices-box .gold-prices-box-up .up-prices .number {
  font-size: 34rpx;
  font-weight: bold;
}
.gold-prices-box .gold-prices-box-down {
  width: 100%;
  padding: 40rpx 0;
  background-color: #F6F6F6;
  border-radius: 0 0 10rpx 10rpx;
  display: flex;
  justify-content: center;
  position: relative;
}
.gold-prices-box .gold-prices-box-down .price-box {
  width: 74%;
}
.gold-prices-box .gold-prices-box-down .price-box .price-min-box {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}
.gold-prices-box .gold-prices-box-down .price-box .price-min-box .left {
  width: 28%;
  text-align: center;
  padding-right: 20rpx;
}
.gold-prices-box .gold-prices-box-down .price-box .price-min-box .left .left-title {
  font-size: 22rpx;
  color: #999999;
}
.gold-prices-box .gold-prices-box-down .price-box .price-min-box .left .left-price {
  font-size: 26rpx;
  color: #ee2e2e;
}
.gold-prices-box .gold-prices-box-down .price-box .price-min-box .right {
  width: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
}
.gold-prices-box .gold-prices-box-down .price-box .price-min-box .right .right-symbol {
  font-size: 30rpx;
}
.gold-prices-box .gold-prices-box-down .price-box .price-min-box .right .input {
  width: 66%;
  height: 52rpx;
  background-color: #FFFFFF;
  font-size: 28rpx;
  text-align: center;
  border-radius: 6rpx;
}
.gold-prices-box .gold-prices-box-down .price-box .price-min-box .right-price {
  width: 28%;
  text-align: center;
  font-weight: bold;
  font-size: 26rpx;
}
.gold-prices-box .gold-prices-box-down .circle-left {
  width: 24rpx;
  height: 24rpx;
  background-color: #FFFFFF;
  border-radius: 100%;
  position: absolute;
  left: -12rpx;
  top: -12rpx;
}
.gold-prices-box .gold-prices-box-down .circle-right {
  width: 24rpx;
  height: 24rpx;
  background-color: #FFFFFF;
  border-radius: 100%;
  position: absolute;
  right: -12rpx;
  top: -12rpx;
}
.explain {
  font-size: 22rpx;
  color: #999999;
  display: flex;
  margin-bottom: 100rpx;
}
.explain .explain-title {
  width: 12%;
}
.bottom-btn {
  width: 100%;
  padding: 20rpx 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.bottom-btn .btn {
  font-size: 30rpx;
  color: #FFFFFF;
  background-image: linear-gradient(90deg, #2b3f7d 0%, #1b2c60 100%);
  border-radius: 40rpx;
}

