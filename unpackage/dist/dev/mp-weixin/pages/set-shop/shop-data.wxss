.visit-box {
  padding: 30rpx;
  border-top: solid 2rpx #F8F8F8;
}
.visit-box .visit-title {
  display: flex;
  align-items: center;
}
.visit-box .visit-title .visit-logo {
  width: 4%;
  display: flex;
  margin-right: 20rpx;
}
.visit-box .visit-title .visit-logo image {
  width: 100%;
}
.visit-box .visit-number {
  height: 120rpx;
  line-height: 120rpx;
  margin-top: 20rpx;
  box-shadow: 0px 0px 30px 0px rgba(45, 64, 122, 0.08);
  background-color: #FFFFFF;
  border-radius: 10rpx;
  text-align: center;
}
.visit-box .visit-number .number {
  font-size: 50rpx;
  font-weight: bold;
}
.visit-box .visit-number .ren {
  font-size: 24rpx;
}
.statistics-title {
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.statistics-title .visit-title-left {
  width: 50%;
  display: flex;
  align-items: center;
}
.statistics-title .visit-title-left .visit-logo {
  width: 8%;
  display: flex;
  margin-right: 20rpx;
}
.statistics-title .visit-title-left .visit-logo image {
  width: 100%;
}
.statistics-title .statistics-title-right {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.statistics-title .statistics-title-right .month {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 20rpx;
  background-color: #eeeeee;
  color: #666666;
}
.statistics-title .statistics-title-right .week {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: #eeeeee;
  color: #666666;
}
.statistics-title .statistics-title-right .act {
  background-color: #2d407a;
  color: #FFFFFF;
}
