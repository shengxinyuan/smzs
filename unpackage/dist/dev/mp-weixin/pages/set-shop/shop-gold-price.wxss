.shop_tab {
  margin-top: 20rpx;
  width: 100%;
  background-color: #F6F6F6;
  display: flex;
  flex-wrap: wrap;
}
.shop_tab .tab_it {
  width: 48%;
  background-color: white;
  display: flex;
  justify-content: space-between;
  margin: 5rpx 1%;
  padding: 20rpx;
}
.zl-box {
  padding: 20rpx 30rpx;
}
.zl-box .head-box {
  display: flex;
  padding: 20rpx 0;
  background-color: #fff6e5;
}
.zl-box .head-box .head-box-left {
  width: 50%;
  text-align: center;
  border-right: solid 2rpx #f6ce82;
}
.zl-box .head-box .head-box-left .title {
  font-size: 24rpx;
  color: #666666;
}
.zl-box .head-box .head-box-left .price {
  color: #f1ac29;
  margin: 40rpx 0;
}
.zl-box .head-box .head-box-left .price .rmb {
  font-size: 30rpx;
}
.zl-box .head-box .head-box-left .price .money {
  font-size: 50rpx;
}
.zl-box .head-box .head-box-right {
  width: 50%;
  padding: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.zl-box .head-box .head-box-right .title {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}
.uni-padding-wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.radio-box {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.radio {
  font-size: 26rpx;
  color: #999999;
}
.oneself-set {
  color: #999999;
}
.popup-box-up {
  padding: 40rpx 0;
}
.popup-box-up .popup-title {
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 70rpx;
}
.popup-box-up .popup-set {
  display: flex;
  justify-content: center;
  align-items: center;
}
.popup-box-up .popup-set .set-box {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.popup-box-up .popup-set .set-box .set-title {
  width: 35%;
  font-size: 26rpx;
  color: #575c5e;
}
.popup-box-up .popup-set .set-box .set-text {
  width: 60%;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
}
.popup-box-up .popup-set .set-box .set-text .text-one {
  width: 10%;
}
.popup-box-up .popup-set .set-box .set-text .symbol {
  font-size: 36rpx;
}
.popup-box-up .popup-set .set-box .set-text .input {
  width: 60%;
  height: 52rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #f6f6f6;
}
.popup-box-up .btn {
  width: 69%;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  background-image: linear-gradient(90deg, #2b3f7d 0%, #1b2c60 100%);
  border-radius: 30rpx;
}
.popup-box-down {
  padding: 30rpx;
  background-color: #f6f6f6;
  font-size: 22rpx;
  color: #f5b47f;
}

