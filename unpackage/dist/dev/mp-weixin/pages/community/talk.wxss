.swiper {
  width: 100%;
  height: 400rpx;
  border-radius: 14rpx;
  overflow: hidden;
}
.swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.swiper .swiper-item image {
  width: 100%;
  height: 100%;
}
.swiper-box {
  padding: 20rpx;
}
.yltk-bars-list {
  padding: 20rpx;
  font-size: 28rpx;
  display: flex;
}
.yltk-bars-list .yltk-bars-box {
  width: 25%;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 30rpx;
}
.yltk-bars-list .yltk-bars-box.active {
  background-image: linear-gradient(90deg, #f8e1b5 0%, #ffffff 100%);
}
.yltk-details-list {
  padding: 20rpx;
}
.yltk-details-list .yltk-details-box {
  padding: 20rpx 2%;
  display: flex;
}
.yltk-details-list .yltk-details-box .details-box-left {
  width: 74%;
  padding-right: 20rpx;
}
.yltk-details-list .yltk-details-box .details-box-left .details-text {
  font-size: 30rpx;
  font-weight: bold;
}
.yltk-details-list .yltk-details-box .details-box-left .bottom-show {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 24rpx;
  color: #999999;
  margin-top: 80rpx;
}
.yltk-details-list .yltk-details-box .details-box-right {
  width: 26%;
  height: 185rpx;
  display: flex;
}
.yltk-details-list .yltk-details-box .details-box-right image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

